<p class="alert alert-success alert-dismissable">
	<button class="close" type="button" data-dismiss="alert" aria-hidden="true">&times;</button>
	User has been updated
</p>
<form class="admin-model-form" action="#">
	<section class="container-fluid">
		<div class="row">
			<div class="col-lg-9">
				<h3>Admin</h3>
				<div class="form-group">
					<label for="email">Email:</label>
					<input id="email" class="form-control" type="email" value="admin@admin.admin" placeholder="Enter email..."/>
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input class="form-control" id="password" type="password" placholder="Enter password..." />
				</div>
				<div class="form-group">
					<label for="confirm-password">Confirm password:</label>
					<input class="form-control" id="confirm-password" type="password" placholder="Confirm password..." />
				</div>
				<h3>Profile</h3>
				<div class="form-group">
					<label for="first-name">First name:</label>
					<input id="first-name" class="form-control" type="text" value="Admin" />
				</div>
				<div class="form-group">
					<label for="last-name">Last name:</label>
					<input id="last-name" class="form-control" type="text" value="Admin" />
				</div>
			</div>
			<aside class="col-lg-3">
				<div class="panel panel-default">
					<div class="panel-heading">
						Additional
					</div>
					<div class="panel-body">
						<div class="thumbnail">
							<img src="http://placehold.it/200x300" alt="" class="img-thumbnail" />
						</div>
						<div class="form-group">
							<label for="group">Group:</label>
							<select id="group" class="form-control" name="">
								<option value="">Admin</option>
								<option value="">Editor</option>
							</select>
						</div>
						<button class="btn btn-success btn-block" type="submit">
							<i class="glyphicon glyphicon-floppy-save"></i>
							Update
						</button>
						<button class="btn btn-warning btn-block" type="submit">
							<i class="glyphicon glyphicon-remove"></i>
							Cancel
						</button>
						<button class="btn btn-danger btn-block" type="submit">
							<i class="glyphicon glyphicon-trash"></i>
							Delete
						</button>
					</div>
				</div>
			</aside>
		</div>
	</section>
</form>
